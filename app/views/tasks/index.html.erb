<h1>My Tasks!</h1>
<% @tasks.each do |task|%>
  <li><%= link_to "#{task.title}", "/tasks/#{task.id}" %> - <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task.title}?"} %>
  </li>
<% end %>
<%= link_to "Add new Task", "tasks/new" %>
